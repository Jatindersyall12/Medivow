<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v_light_grey"
    android:orientation="vertical"
    tools:context=".feature.tutorial.TutorialActivity">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/intro_logo"
           android:layout_marginTop="30dp"
           android:layout_gravity="center"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1.3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/slider_dots_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/txt_next"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_loading_btn"
            android:paddingHorizontal="@dimen/dp_32"
            android:paddingVertical="@dimen/dp_6"
            android:text="GET STARTED"
            android:textColor="@color/v_light_grey" />
        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_32"
            android:paddingVertical="@dimen/dp_6"
            android:text="@string/skip"
            android:visibility="gone"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>