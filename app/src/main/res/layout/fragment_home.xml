<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v_light_grey"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvChangeLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textSize="18sp"
                android:fontFamily="@font/muli_bold"
                android:visibility="gone"
                android:text="Change Location"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/grey_dark"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10">

                <LinearLayout
                    android:id="@+id/llLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/location"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Change Location"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@mipmap/pencil"
                        app:tint="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:padding="7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/colorPrimary"
                        android:src="@mipmap/wallet"/>
                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="000.00"/>

                </LinearLayout>
            </RelativeLayout>
 <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/grey_dark"/>

            <RelativeLayout
                android:id="@+id/rlSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_search">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:src="@mipmap/search_home" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/filter"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Search a doctor or health issue"
                    android:textColor="@color/grey_medium" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginVertical="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/pay_layout"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/bg_search">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/pay"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/app_theme_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wallet_layout"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="7dp"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/bg_search">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wallet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/wallet"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/app_theme_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_transaction_history" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_regular"
                        android:text="@string/transaction_history"
                        android:textAlignment="center"
                        android:textColor="@color/app_theme_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/services_layout"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/bg_search">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/service" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/services"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/app_theme_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/surgery_package_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_90"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/bg_search">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/package_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_regular"
                        android:text="Package"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/app_theme_color" />

                </LinearLayout>


            </LinearLayout>
            <!--<LinearLayout
                android:id="@+id/user_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical">

